{{#if isLoggedIn}}
<div class='container mt-4 ' style=" padding-top: 50px ">
    <div class='row'>
        <h1>{{message}}</h1>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4 mt-4'>
                <div class='card h-100' style='margin-top: 30px; border: none;
                        overflow:hidden;
                        border-radius:20px;
                        box-shadow: 0 0 12px 0 rgba(0,0,0,0.2);'>
                    <a href='/courses/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            src='{{this.image}}'
                            alt='{{this.name}}'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/courses/{{this.slug}}' style="text-decoration: none;">
                            <h4 class='card-title'>{{this.name}}</h4>
                        </a>
                        <p class='card-text'>{{this.title}}</p>
                    </div>
                </div>
            </div>
            
        {{/each}}
        {{/if}}
    </div>
</div>

